<div class="form">
  <h1>Sign in</h1>

  <%= form_for :signin, method: "POST", role: "form" do |f| %>
  
  <div class="form-group">
    <%= f.label :username %>
    <div class="form-control-container">      
      <%= f.text_field :username, :autofocus => true, class: "form-control" %>  
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <div class="form-control-container">
      <%= f.password_field :password, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-control-container">
    <%= f.submit "Sign in" %>
  </div>
  <% end %>
</div>


