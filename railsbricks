#!/bin/bash
if [ "$1" = "-n" ] || [ "$1" = "--new" ]
  then
  rails_create
elif [ "$1" = "-D" ] || [ "$1" = "--destroy" ]
  then
  rails_destroy
elif [ "$1" = "-r" ] || [ "$1" = "--recreate-db" ]
  then
  rails_db_recreate
else

  echo
  echo
  echo "************************************************"
  echo "*             RailsBricks v1.0.0               *"
  echo "*             ------------------               *"
  echo "*         http://www.railsbricks.net           *"
  echo "************************************************"
  echo
  echo "1) Create a new Rails app"
  echo "2) Destroy a Rails app"
  echo "3) Recreate database"
  echo "4) Shortcuts"
  echo "5) Exit"
  echo -n ": "
  read CHOICE
  
  if [ "$CHOICE" = "1" ]
    then
    rails_create
  elif [ "$CHOICE" = "2" ]
    then
    rails_destroy
  elif [ "$CHOICE" = "3" ]
    then
    rails_db_recreate
  elif [ "$CHOICE" = "4" ]
    then
    echo
    echo "railsbricks -n (or railsbricks --new):" 
    echo " - creates a new Rails app with RailsBricks templates"
    echo "railsbricks -D (or railsbricks --destroy):"     
    echo " - destroys a Rails app and its RVM gemset"
    echo "railsbricks -r (or railsbricks --recreate-db):" 
    echo " - drop, migrate and seed the development database"
    echo
  else
    exit 1
  fi

fi