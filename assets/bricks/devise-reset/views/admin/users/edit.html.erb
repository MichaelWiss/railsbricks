<div class="form">
    <p>
      Edit User: <%= "#{@user.username.capitalize} - id: #{@user.id}" %>
    </p>
    <p><%= link_to "Back to Users", admin_users_path %></p>

    <% if @user.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <%= form_for [:admin, @user], :html => { :role => "form" } do |f| %>
    
    <div class="form-group">
      <%= f.label :username %>
      <div class="form-control-container"> 
          <%= f.text_field :username, :autofocus => true, class: "form-control" %>  
        </div>
    </div>
    
    <div class="form-group">
      <%= f.label :email %>
      <div class="form-control-container">      
          <%= f.email_field :email, class: "form-control" %>  
        </div>
    </div>

    <div class="form-group">
          <%= f.label :password %>
          <div class="form-control-container"> 
          <%= f.password_field :password, class: "form-control" %>
        </div>
    </div>

    <div class="form-group">
          <%= f.label :password_confirmation %>
          <div class="form-control-container"> 
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
    </div>
    
    <% unless current_user.id == @user.id %>
    <div class="checkbox">
      <%= f.check_box :locked %> <%= f.label :locked, "Is Locked?" %>
    </div>
    
    <div class="checkbox">
      <%= f.check_box :admin %> <%= f.label :admin, "Is Admin?" %>
    </div>    
    <% end %>

  <div class="form-control-container"> 
        <%= f.submit "Update User" %>
      </div>
    
    <% end %>

  </div>
